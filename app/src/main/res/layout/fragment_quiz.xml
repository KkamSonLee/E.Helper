<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/unselect_text"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".ui.fragment.QuizFragment">

    <LinearLayout
        android:id="@+id/enabled"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/q1text"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:fontFamily="@font/gmarketsans_bold"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="13pt" />

        <Button
            android:id="@+id/q1btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/mywordshape"
            android:fontFamily="@font/gmarketsans_bold"
            android:textColor="@color/solveview_text"
            android:textSize="9pt" />

        <Button
            android:id="@+id/q2btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/mywordshape"
            android:fontFamily="@font/gmarketsans_bold"
            android:textColor="@color/solveview_text"
            android:textSize="9pt" />

        <Button
            android:id="@+id/q3btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/mywordshape"
            android:fontFamily="@font/gmarketsans_bold"
            android:textColor="@color/solveview_text"
            android:textSize="9pt" />

        <Button
            android:id="@+id/q4btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/mywordshape"
            android:fontFamily="@font/gmarketsans_bold"
            android:textColor="@color/solveview_text"
            android:textSize="9pt" />
    </LinearLayout>

    <ImageView
        android:id="@+id/good"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="150dp"
        android:visibility="gone"
        android:src="@drawable/img_good"/>

    <ImageView
        android:id="@+id/bad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="150dp"
        android:visibility="gone"
        android:src="@drawable/img_bad"/>
</FrameLayout>